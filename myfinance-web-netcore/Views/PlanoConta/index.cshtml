<h1>Plano de Contas</h1>

<button type="button" class="btn btn-block btn-primary" onclick="Novo()">Criar item de Plano de Conta</button>

<table class="table table-bordered">
    <tr>
        <td>Id</td>
        <td>Descrição</td>
        <td>Tipo</td>
        <td>#</td>
        <td>#</td>
    </tr>

    @{
        foreach (var item in (List<PlanoContaModel>)ViewBag.ListaPlanoConta)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Descricao</td>
                <td>@item.Tipo</td>
                <td><button type="button" class="btn btn-block btn-outline-warning" onclick="Atualizar(@item.Id.ToString())">
                        Editar </button></td>
                <td><button type="button" class="btn btn-block btn-outline-danger" onclick="Atualizar(@item.Id.ToString())">
                        Excluir </button></td>
            </tr>
        }
    }
</table>


<script>
    function Novo() {
        window.location.href = ".../PlanoConta/Cadastrar";
    }

    function Atualizar(id) {
        window.location.href = ".../PlanoConta/Cadastrar/" + id;
    }

    function Excluir(id) {
        window.location.href = ".../PlanoConta/Excluir/" + id
    }
</script>